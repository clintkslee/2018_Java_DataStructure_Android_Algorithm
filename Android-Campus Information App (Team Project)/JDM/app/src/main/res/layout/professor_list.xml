<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentStart="true"
            android:id="@+id/professorName"
            android:layout_marginTop="5dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="김이박"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/profn"
            android:layout_toRightOf="@id/professorName"
            android:layout_alignBottom="@id/professorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 교수님"
            android:textSize="15dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/professorMajor"
            android:layout_toRightOf="@+id/profn"
            android:paddingLeft="15dp"
            android:layout_alignBottom="@id/professorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소속학과"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="45dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="LAB"/>
        <TextView
            android:id="@+id/professorLab"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAA관 bbbbb호"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="TEL"/>
        <TextView
            android:id="@+id/professorTel"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000 - 0000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="MAIL"/>
        <TextView
            android:id="@+id/professorMail"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa@ssu.ac.kr"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>